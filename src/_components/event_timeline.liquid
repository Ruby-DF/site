<ol class="event-timeline w-fit mx-auto" reversed>
  {% for event in events %}
    <li>
      <span aria-hidden>
        <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="currentColor" viewBox="0 0 16 16">
          <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4zM2.545 3h10.91c.3 0 .545.224.545.5v1c0 .276-.244.5-.546.5H2.545C2.245 5 2 4.776 2 4.5v-1c0-.276.244-.5.545-.5" />
        </svg>
      </span>
      <h2 class="text-xl m-0">
        <a href="{{ event.relative_url }}">{{ event.title }}</a>
      </h2>
      <time>Realizado em {{ event.date | date: "%d/%m/%Y" }}</time>
      <p class="m-0 mt-2">O evento contou com {% render "plural", word: "palestra", count: event.talks.size %}{% if event.attendees %} e {% render "plural", word: "participante", count: event.attendees %}{% endif %}.</p> </li>
  {% endfor %}
</ol>
